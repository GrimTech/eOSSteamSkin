combobox.styles
{
	styles
	{
		ComboBox [$LINUX]
		{
			inset="10 0 0 0"
			textcolor="eOSContextMenu"
			font-family=basefont
			font-size="14"
			selectedtextcolor="eOSContextMenu"
			selectedbgcolor=none
			bgcolor=none

			render_bg
			{
				0="image(x0, y0, x0 + 5, y0 + 5, graphics/eos/controls/combobox/tl)"
                1="image(x1 - 5, y0, x1, y0 + 5, graphics/eos/controls/combobox/tr)"
                2="image(x0, y1 - 5, x0 + 5, y1, graphics/eos/controls/combobox/bl)"
                3="image(x1 - 5, y1 - 5, x1, y1, graphics/eos/controls/combobox/br)"
                4="image_tiled(x0 + 5, y0, x1 - 5, y0 + 5, graphics/eos/controls/combobox/t)"
                5="image_scale(x0, y0 + 5, x0 + 5, y1 - 5, graphics/eos/controls/combobox/l)"
                6="image_scale(x1 - 5, y0 + 5, x1, y1 - 5, graphics/eos/controls/combobox/r)"
                7="image_tiled(x0 + 5, y1 - 5, x1 - 5, y1, graphics/eos/controls/combobox/b)"
                8="image_scale(x0 + 5, y0 + 5, x1 - 5, y1 - 5, graphics/eos/controls/combobox/m)"
                9="image(x1 - 20, y0 + 10, x1 - 10, y0 + 18, graphics/eos/controls/combobox/arrow)"
			}
		}
		
		ComboBox [$OSX]
		{
			inset="10 0 0 0"
			textcolor="eOSContextMenu"
			font-family=basefont
			font-size="14"
			selectedtextcolor="eOSContextMenu"
			selectedbgcolor=none
			bgcolor=none

			render_bg
			{
				0="image(x0, y0, x0 + 5, y0 + 5, graphics/mac/controls/combobox/normal/tl)"
                1="image(x1 - 5, y0, x1, y0 + 5, graphics/mac/controls/combobox/normal/tr)"
                2="image(x0, y1 - 5, x0 + 5, y1, graphics/mac/controls/combobox/normal/bl)"
                3="image(x1 - 5, y1 - 5, x1, y1, graphics/mac/controls/combobox/normal/br)"
                4="image_scale(x0 + 5, y0, x1 - 17, y0 + 5, graphics/mac/controls/combobox/normal/t)"
                5="image_scale(x0, y0 + 5, x0 + 5, y1 - 5, graphics/mac/controls/combobox/normal/l)"
                6="image_scale(x1 - 5, y0 + 5, x1, y1 - 5, graphics/mac/controls/combobox/normal/r)"
                7="image_scale(x0 + 5, y1 - 5, x1 - 17, y1, graphics/mac/controls/combobox/normal/b)"
                8="image_scale(x0 + 5, y0 + 5, x1 - 17, y1 - 5, graphics/mac/controls/combobox/normal/m)"

                9="image_scale(x1 - 17, y0, x1 - 5, y0 + 5, graphics/mac/controls/combobox/normal/at)"
                11="image_scale(x1 - 17, y1 - 5, x1 - 5, y1, graphics/mac/controls/combobox/normal/ab)"
                12="image_scale(x1 - 17, y0 + 5, x1 - 5, y1 - 5, graphics/mac/controls/combobox/normal/am)"
                13="image(x1 - 13, y0 + 10, x1 - 5, y0 + 15, graphics/mac/controls/combobox/normal/a)"
			}
		}

		ComboBoxButton
		{
			bgcolor=none
			textcolor=none
			inset=0
			padding=0
			minimum-width=48
			render {}
			render_bg {}
		}
	}
}
