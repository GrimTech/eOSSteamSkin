button.styles
{
	styles
	{
		Button
		{     
			font-family=basefont
			font-size=14
			font-weight=400
			inset="8 2 8 2"
			textcolor="Text"
			render_bg
			{
				0="image(x0, y0, x0 + 6, y0 + 6, graphics/macos/light/controls/button/normal/tl)"
                1="image(x1 - 6, y0, x1, y0 + 6, graphics/macos/light/controls/button/normal/tr)"
                2="image(x0, y1 - 6, x0 + 6, y1, graphics/macos/light/controls/button/normal/bl)"
                3="image(x1 - 6, y1 - 6, x1, y1, graphics/macos/light/controls/button/normal/br)"
                4="image_tiled(x0 + 6, y0, x1 - 6, y0 + 6, graphics/macos/light/controls/button/normal/t)"
                5="image_scale(x0, y0 + 6, x0 + 6, y1 - 6, graphics/macos/light/controls/button/normal/l)"
                6="image_scale(x1 - 6, y0 + 6, x1, y1 - 6, graphics/macos/light/controls/button/normal/r)"
                7="image_tiled(x0 + 6, y1 - 6, x1 - 6, y1, graphics/macos/light/controls/button/normal/b)"
                8="image_scale(x0 + 6, y0 + 6, x1 - 6, y1 - 6, graphics/macos/light/controls/button/normal/m)"
			}
		}
		Button:focus
		{
			textcolor="white"
			render_bg
			{
				0="image(x0, y0, x0 + 6, y0 + 6, graphics/macos/light/controls/button/active/tl)"
                1="image(x1 - 6, y0, x1, y0 + 6, graphics/macos/light/controls/button/active/tr)"
                2="image(x0, y1 - 6, x0 + 6, y1, graphics/macos/light/controls/button/active/bl)"
                3="image(x1 - 6, y1 - 6, x1, y1, graphics/macos/light/controls/button/active/br)"
                4="image_tiled(x0 + 6, y0, x1 - 6, y0 + 6, graphics/macos/light/controls/button/active/t)"
                5="image_scale(x0, y0 + 6, x0 + 6, y1 - 6, graphics/macos/light/controls/button/active/l)"
                6="image_scale(x1 - 6, y0 + 6, x1, y1 - 6, graphics/macos/light/controls/button/active/r)"
                7="image_tiled(x0 + 6, y1 - 6, x1 - 6, y1, graphics/macos/light/controls/button/active/b)"
                8="image_scale(x0 + 6, y0 + 6, x1 - 6, y1 - 6, graphics/macos/light/controls/button/active/m)"
			}
		}
		Button:selected
		{
			textcolor="white"
			render_bg
			{
				0="image(x0, y0, x0 + 6, y0 + 6, graphics/macos/light/controls/button/active/tl)"
                1="image(x1 - 6, y0, x1, y0 + 6, graphics/macos/light/controls/button/active/tr)"
                2="image(x0, y1 - 6, x0 + 6, y1, graphics/macos/light/controls/button/active/bl)"
                3="image(x1 - 6, y1 - 6, x1, y1, graphics/macos/light/controls/button/active/br)"
                4="image_tiled(x0 + 6, y0, x1 - 6, y0 + 6, graphics/macos/light/controls/button/active/t)"
                5="image_scale(x0, y0 + 6, x0 + 6, y1 - 6, graphics/macos/light/controls/button/active/l)"
                6="image_scale(x1 - 6, y0 + 6, x1, y1 - 6, graphics/macos/light/controls/button/active/r)"
                7="image_tiled(x0 + 6, y1 - 6, x1 - 6, y1, graphics/macos/light/controls/button/active/b)"
                8="image_scale(x0 + 6, y0 + 6, x1 - 6, y1 - 6, graphics/macos/light/controls/button/active/m)"
			}
		}
		Button:active
		{
			textcolor="white"
			render_bg
			{
				0="image(x0, y0, x0 + 6, y0 + 6, graphics/macos/light/controls/button/pressed/tl)"
                1="image(x1 - 6, y0, x1, y0 + 6, graphics/macos/light/controls/button/pressed/tr)"
                2="image(x0, y1 - 6, x0 + 6, y1, graphics/macos/light/controls/button/pressed/bl)"
                3="image(x1 - 6, y1 - 6, x1, y1, graphics/macos/light/controls/button/pressed/br)"
                4="image_tiled(x0 + 6, y0, x1 - 6, y0 + 6, graphics/macos/light/controls/button/pressed/t)"
                5="image_scale(x0, y0 + 6, x0 + 6, y1 - 6, graphics/macos/light/controls/button/pressed/l)"
                6="image_scale(x1 - 6, y0 + 6, x1, y1 - 6, graphics/macos/light/controls/button/pressed/r)"
                7="image_tiled(x0 + 6, y1 - 6, x1 - 6, y1, graphics/macos/light/controls/button/pressed/b)"
                8="image_scale(x0 + 6, y0 + 6, x1 - 6, y1 - 6, graphics/macos/light/controls/button/pressed/m)"
			}
		}
		Button:disabled
		{
			textcolor="grey"
			render_bg
			{
				0="image(x0, y0, x0 + 6, y0 + 6, graphics/macos/light/controls/button/disabled/tl)"
                1="image(x1 - 6, y0, x1, y0 + 6, graphics/macos/light/controls/button/disabled/tr)"
                2="image(x0, y1 - 6, x0 + 6, y1, graphics/macos/light/controls/button/disabled/bl)"
                3="image(x1 - 6, y1 - 6, x1, y1, graphics/macos/light/controls/button/disabled/br)"
                4="image_tiled(x0 + 6, y0, x1 - 6, y0 + 6, graphics/macos/light/controls/button/disabled/t)"
                5="image_scale(x0, y0 + 6, x0 + 6, y1 - 6, graphics/macos/light/controls/button/disabled/l)"
                6="image_scale(x1 - 6, y0 + 6, x1, y1 - 6, graphics/macos/light/controls/button/disabled/r)"
                7="image_tiled(x0 + 6, y1 - 6, x1 - 6, y1, graphics/macos/light/controls/button/disabled/b)"
                8="image_scale(x0 + 6, y0 + 6, x1 - 6, y1 - 6, graphics/macos/light/controls/button/disabled/m)"
			}
		}
	}
}