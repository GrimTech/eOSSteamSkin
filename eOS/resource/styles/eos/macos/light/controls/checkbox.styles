checkbox.styles
{
	styles
	{
		CheckButton
		{
			font-family=basefont
			font-size=14
			font-weight=400
			textcolor="Label"
			image="graphics/macos/light/controls/checkbox/unchecked/normal"
		}
		CheckButton:active
		{
			image="graphics/macos/light/controls/checkbox/unchecked/pressed"
		}
		CheckButton:disabled
		{
			textcolor="TextDisabled"
			image="graphics/macos/light/controls/checkbox/unchecked/disabled"
		}
		CheckButton:selected
		{
			image="graphics/macos/light/controls/checkbox/checked/normal"
		}
		CheckButton:selected:active
		{
			image="graphics/macos/light/controls/checkbox/checked/pressed"
		}
		CheckButton:selected:disabled
		{
			textcolor="TextDisabled"
			image="graphics/macos/light/controls/checkbox/checked/disabled"
		}
		
		IndeterminateCheckButton
		{
			font-family=basefont
			font-size=14
			font-weight=400
			textcolor="Label"
			bgcolor=none
			image="graphics/macos/light/controls/checkbox/indeterminate/normal"
		}
		IndeterminateCheckButton:active
		{
			image="graphics/macos/light/controls/checkbox/indeterminate/pressed"
		}
		IndeterminateCheckButton:disabled
		{
			image="graphics/macos/light/controls/checkbox/indeterminate/disabled"
		}

		ListPanelCheckBox
		{
			font-family=basefont
			font-size=14
			font-weight=400
			textcolor="Label"
			image="graphics/macos/light/controls/checkbox/unchecked/normal"
			inset="0 5 0 0"
		}
		ListPanelCheckBox:active
		{
			image="graphics/macos/light/controls/checkbox/unchecked/pressed"
		}
		ListPanelCheckBox:disabled
		{
			textcolor="TextDisabled"
			image="graphics/macos/light/controls/checkbox/unchecked/disabled"
		}
		ListPanelCheckBox:selected
		{
			image="graphics/macos/light/controls/checkbox/checked/normal"
		}
		ListPanelCheckBox:selected:active
		{
			image="graphics/macos/light/controls/checkbox/checked/pressed"
		}
		ListPanelCheckBox:selected:disabled
		{
			textcolor="TextDisabled"
			image="graphics/macos/light/controls/checkbox/checked/disabled"
		}
	}
}