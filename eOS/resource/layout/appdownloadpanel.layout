"resource/layout/appdownloadpanel.layout"
{
	styles
	{
		panelStyle
		{
			bgcolor=none
			render_bg
			{
            	0="fill(x0, y0, x1, y0 + 1, eOSSidebarBorder)"
            	1="fill(x0, y1-4, x1, y1, eOSSidebarBG)"
			}
		}
		
		panelStyleHighlight
		{

		}

		ModuleHeading
    	{
    		font-size=18
    		font-style="normal"
    		font-family=basefont
    		textcolor="black"
    		font-weight=400 [!$OSX]
    		font-weight=700 [$OSX]
    		inset-bottom=-2 [!$OSX]
    	}

    	ProgressBar
    	{
    		render {}
    		render_bg {
    			0="fill(x0, y0, x1 + 1, y1, eOSSidebarBG)"
    		}
    	}

		topOfQueueButton
		{
			inset=0
			render_bg
			{
				0="image(x0, y0, x1, y1, graphics/_common/library/downloads/queue_up)"
			}
		}
		topOfQueueButton:hover
		{
			render
			{
				0="image(x0, y0, x1, y1, graphics/_common/library/downloads/queue_up)"
			}
		}
		topOfQueueButton:active
		{
			render
			{
				0="image(x0, y0, x1, y1, graphics/_common/library/downloads/queue_up)"
				1="image(x0, y0, x1, y1, graphics/_common/library/downloads/queue_up)"
			}
		}
		
		SmRemoveButton
		{
			inset=0
			render_bg
			{
				0="image(x0, y0, x1, y1, graphics/_common/library/downloads/remove)"
			}
		}
		SmRemoveButton:hover
		{
			render
			{
				0="image(x0, y0, x1, y1, graphics/_common/library/downloads/remove)"
			}
		}
		SmRemoveButton:active
		{
			render
			{
				0="image(x0, y0, x1, y1, graphics/_common/library/downloads/remove)"
				1="image(x0, y0, x1, y1, graphics/_common/library/downloads/remove)"
			}
		}

		DetailsLaunchButton
		{   
			font-family=basefont
			font-size=16
			font-weight=400
			textcolor="White"
			font-style=uppercase
			bgcolor=none

			minimum-height=36
			inset="30 2 30 2"

			render_bg
			{
				0="image(x0 - 2, y0 - 2, x0 + 12, y0 + 12, graphics/_common/library/buttons/play/tl)"
                1="image(x1 - 12, y0 - 2, x1 + 2, y0 + 12, graphics/_common/library/buttons/play/tr)"
                2="image(x0 - 2, y1 - 7, x0 + 12, y1 + 7, graphics/_common/library/buttons/play/bl)"
                3="image(x1 - 12, y1 - 7, x1 + 2, y1 + 7, graphics/_common/library/buttons/play/br)"
                4="image_tiled(x0 + 12, y0 - 2, x1 - 12, y0 + 12, graphics/_common/library/buttons/play/t)"
                5="image_tiled(x0 - 2, y0 + 12, x0 + 12, y1 - 7, graphics/_common/library/buttons/play/l)"
                6="image_tiled(x1 - 12, y0 + 12, x1 + 2, y1 - 7, graphics/_common/library/buttons/play/r)"
                7="image_tiled(x0 + 12, y1 - 7, x1 - 12, y1 + 7, graphics/_common/library/buttons/play/b)"
                8="image_scale(x0 + 12, y0 + 12, x1 - 12, y1 - 7, graphics/_common/library/buttons/play/m)"
			}
		}
		DetailsLaunchButton:Hover
		{
			render_bg
			{
				0="image(x0 - 2, y0 - 2, x0 + 12, y0 + 12, graphics/_common/library/buttons/play/active/tl)"
                1="image(x1 - 12, y0 - 2, x1 + 2, y0 + 12, graphics/_common/library/buttons/play/active/tr)"
                2="image(x0 - 2, y1 - 7, x0 + 12, y1 + 7, graphics/_common/library/buttons/play/active/bl)"
                3="image(x1 - 12, y1 - 7, x1 + 2, y1 + 7, graphics/_common/library/buttons/play/active/br)"
                4="image_tiled(x0 + 12, y0 - 2, x1 - 12, y0 + 12, graphics/_common/library/buttons/play/active/t)"
                5="image_tiled(x0 - 2, y0 + 12, x0 + 12, y1 - 7, graphics/_common/library/buttons/play/active/l)"
                6="image_tiled(x1 - 12, y0 + 12, x1 + 2, y1 - 7, graphics/_common/library/buttons/play/active/r)"
                7="image_tiled(x0 + 12, y1 - 7, x1 - 12, y1 + 7, graphics/_common/library/buttons/play/active/b)"
                8="image_scale(x0 + 12, y0 + 12, x1 - 12, y1 - 7, graphics/_common/library/buttons/play/active/m)"
			}
		}
		DetailsLaunchButton:Active
		{
			render_bg
			{
				0="image(x0 - 2, y0 - 2, x0 + 12, y0 + 12, graphics/_common/library/buttons/play/active/tl)"
                1="image(x1 - 12, y0 - 2, x1 + 2, y0 + 12, graphics/_common/library/buttons/play/active/tr)"
                2="image(x0 - 2, y1 - 7, x0 + 12, y1 + 7, graphics/_common/library/buttons/play/active/bl)"
                3="image(x1 - 12, y1 - 7, x1 + 2, y1 + 7, graphics/_common/library/buttons/play/active/br)"
                4="image_tiled(x0 + 12, y0 - 2, x1 - 12, y0 + 12, graphics/_common/library/buttons/play/active/t)"
                5="image_tiled(x0 - 2, y0 + 12, x0 + 12, y1 - 7, graphics/_common/library/buttons/play/active/l)"
                6="image_tiled(x1 - 12, y0 + 12, x1 + 2, y1 - 7, graphics/_common/library/buttons/play/active/r)"
                7="image_tiled(x0 + 12, y1 - 7, x1 - 12, y1 + 7, graphics/_common/library/buttons/play/active/b)"
                8="image_scale(x0 + 12, y0 + 12, x1 - 12, y1 - 7, graphics/_common/library/buttons/play/active/m)"
			}
		}
	}

	layout
	{
		region { name="card" margin-left=16 width=max }

		region { name="content" region="card" width=max height=75 align=bottom }

		region { name="dlinfo" region="content" x=200 align=top width=max margin-right=16 }

		place { control="namelabel" region="card" margin-left=16 margin-top=16 margin-right=56 width=max }

		place { control="topofqueuebutton,removefromqueuebutton" region="card" height=24 width=24 align=right y=12 margin-right=16 }
		
		place { control="launchbutton" region="dlinfo" align=top-center }

		place { control="gameimage" region="content" align=bottom margin-bottom=1 margin-left=-4 width=192 height=74 }

		place { control="downloadtotalfield" region="content" align=bottom-right margin-bottom=6 margin-right=16 }
		place { control="downloadprogressbar" region="content" align=bottom height=4 width=max }

		region { name="hidden" x=0 y=0 width=0 height=0 }
		place { control="spacer,workshopbanner,settingslink,newslink,updatetypelabel,downloadtotallabel,starttimelabel,starttimefield,timecompletedlabel,timecompletedfield,pausereasonlabel,pausereasonfield,timeremaininglabel,timeremainingfield" region="hidden" x=0 y=0 width=0 height=0 }
		
	}
}
